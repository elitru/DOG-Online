@import './../../../../styles.styl'

.input
    position relative
    background white
    border-radius item-radius
    border solid 5px blue_dark
    transition all 300ms

    .title
        position absolute
        top -16px
        left 20px
        font-size 18px
        color white
        background blue_dark
        border-radius 3px
        text-transform uppercase
        padding 2px 7px
        font-weight 700
        transition all 300ms

    input
        width 100%
        border none
        background transparent
        font-size item-font-size
        padding 20px 24px 16px 24px
        box-sizing border-box
        outline none
        font-weight 600
        color blue_dark
        transition all 300ms

    &:focus-within
        transform scale(1.05)
        border-color red

        .title
            background red

        input
            color red

.disabled
    opacity .8
    cursor not-allowed !important

    *
        cursor not-allowed !important