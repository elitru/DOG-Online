@import './../../../../styles.styl'

#select-action
    width 100%
    height 100%
    position absolute
    top 0px
    left 0px
    display grid
    place-items center
    background: rgba(0, 0, 0, .8)

    .box
        width auto
        height auto
        padding 60px
        background white
        border-radius 10px
        display flex
        flex-direction row
        gap 40px

        .option
            width 270px
            height 200px
            background blue
            border solid 10px blue_dark
            font-size 50px
            display grid
            place-items center
            cursor pointer
            transition all 300ms
            border-radius 12px
            color white
            font-weight bold

            &:hover
                border-color red_dark
                background red