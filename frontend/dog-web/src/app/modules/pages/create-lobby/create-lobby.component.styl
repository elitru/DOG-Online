@import './../../../../styles.styl'

#create-lobby
    width 100%
    height 100%
    background url('/assets/background.svg') center
    background-size cover
    display flex
    flex-direction row
    align-content center
    align-content center

    .left
        width 55%
        padding 8%
        display flex
        flex-direction column
        justify-content center
        gap 30px
        
        h1
            margin-top -50px

    .right
        width 45%
        padding 8%
        display flex
        flex-direction column
        justify-content center
        gap 50px

        app-input,
        app-button,
        app-two-select
            max-width 500px

        .to-game-list
            text-align center
            display inline-block
            margin-left -44px
            color white
            font-size 22px
