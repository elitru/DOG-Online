@import './../../../../styles.styl'

#gameboard
    width 100%
    height 100%
    padding 0px
    flex-direction row

    .board-container
        width 100%
        height 100%
        display grid
        place-items center
        margin 0px 50px

        #board
            background transparent


    .cards-container
        flex-grow 1
        width 100%
        height 67%
        max-height 67%
        display grid
        grid-template-columns repeat(3, 1fr)
        grid-template-rows repeat(2, 1fr)
        grid-auto-flow row
        row-gap 10px


