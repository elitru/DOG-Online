@import './../../../../../styles.styl'

.card-item
    width 100%
    height 100%
    margin 10px 0px
    position relative
    opacity .7
    cursor default

    img
        width 80%
        height auto

.selectable
    opacity 1
    cursor pointer

.selected
    margin 0px
    position absolute
    top 50%
    left 150px
    transform translateY(-50%)
    display grid
    place-items center
    flex-wrap nowrap
    opacity 1
    
    img
        height 60%