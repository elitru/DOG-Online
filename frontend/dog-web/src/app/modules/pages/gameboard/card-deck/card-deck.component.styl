@import './../../../../../styles.styl'

.card-deck
    width 100%
    height 100%
    display flex
    align-items center
    align-content center
    gap 100px 50px
    flex-direction row
    justify-content space-evenly
    flex-wrap wrap
    position relative

    app-card
        width 28%
        cursor pointer

.has-selected
    flex-direction column
    gap 0px
    align-content flex-start
    align-items center
    justify-content center
    overflow hidden

    app-card
        width 150px