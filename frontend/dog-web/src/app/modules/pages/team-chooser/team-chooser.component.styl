@import './../../../../styles.styl'

#teams
    display flex
    padding 30px
    width 100%
    height 100%
    flex-direction column

    h1
        width 100%
        padding-top 10px
        font-size 90px
        text-align center
        -webkit-text-stroke-width 6px
        -webkit-text-stroke-color white

    .teams
        width 100%
        height 60%
        display flex
        flex-direction row
        align-content stretch
        align-items stretch
        justify-content center
        gap 120px
        padding 20px
        overflow auto
        -ms-overflow-style none
        scrollbar-width none

        &::-webkit-scrollbar
            display none

        .base,
        .list
            width 50%
            max-width 600px

        .list
            display flex
            flex-direction column
            gap 20px

    .item
        background white
        border-radius item-radius
        border solid 6px blue_dark
        padding 20px
        display flex
        flex-direction column
        gap 10px
        cursor default
        transition all 400ms

        h6
            margin 0px
            padding 0px 0px
            border-radius 10px
            font-size 15px
            color blue

        .player
            margin 0px
            padding 12px 20px
            border-radius 10px
            font-size 20px
            color blue
            background #f3f3f3
            box-shadow 1px -1px 2px 2px #dfdfdf inset
            font-weight bold

    .joinable
        cursor pointer

        &:hover
            border-color red
            transform scale(1.025)

    .next
        width 100%
        max-width 1320px
        margin 0 auto
        margin-top 30px