@import './../../../../styles.styl'

#list
    width 100%
    height 100%
    background url('/assets/background.svg') center
    background-size cover
    display flex
    flex-direction row
    align-content center
    align-content center
    justify-content space-between

    .left
        width 55%
        padding 8%
        display flex
        flex-direction column
        justify-content center
        gap 30px
        
        h1
            margin-top -50px

    .right
        width 45%
        height 100%
        padding 8%
        display flex
        flex-direction column
        justify-content center
        gap 50px
        overflow hidden

        .title
            display flex
            flex-direction row
            padding 10px
            width 100%
            align-items center
            transition all 300ms
            align-content center
            justify-content space-between

            .search
                color red
                font-size 30px
                background white
                border solid 5px blue_dark
                border-radius item-radius
                width 68px
                height 68px
                cursor pointer
                transition all 300ms

                &:hover
                    background red
                    color white
                    border-color red_dark

        .has-search
            h2
                display none

            #search
                width 90%
                margin-right 20px

        .games
            margin-top -30px
            display flex
            flex-direction column
            gap: 20px
            height 70%
            overflow auto
            padding 10px
            box-sizing content-box
            -ms-overflow-style none
            scrollbar-width none

            &::-webkit-scrollbar
                display none

        .no-games
            color white
            text-align center
            font-size 30px
            opacity .8

@media screen and (max-width 2350px)
    #list
        .left
            width 45%

        .right
            width 55%
            max-width 1050px

            .title h2
                font-size 50px